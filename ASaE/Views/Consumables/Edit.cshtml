@model ASaE.Models.EquipmentConsumable

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4 class="mt-2">Редактирование расходного материала #@Model.Id</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="object-prop m-2">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="object-prop m-2">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <div class="object-prop m-2">
        @Html.LabelFor(model => model.Value)
        @Html.TextBox("value", Model.Value, new { style = "border: 1px solid #191e23; border-radius: 3px; padding: 5px;", type = "number", min = "1", max = @Model.MaxValue })
        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
    </div>
    <div class="object-prop m-2">
        @Html.LabelFor(model => model.MaxValue)
        @Html.EditorFor(model => model.MaxValue)
        @Html.ValidationMessageFor(model => model.MaxValue, "", new { @class = "text-danger" })
    </div>

    <hr />

    <div class="d-flex justify-content-center">
        @Html.ActionLink("Вернуться", "Details", "Consumables", new { Id = Model.Id }, new { @class = "btn btn-outline-dark mr-2" })
        <input type="submit" value="Сохранить изменения" class="btn btn-outline-dark mr-2" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
